{
    "name": "freyr/message-broker-contracts",
    "description": "Shared contracts for Freyr Message Broker â€” interfaces, stamps, and attributes",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "symfony",
        "messenger",
        "contracts",
        "outbox-pattern",
        "inbox-pattern",
        "deduplication"
    ],
    "authors": [
        {
            "name": "Freyr Development Team"
        }
    ],
    "require": {
        "php": ">=8.2",
        "freyr/identity": "^0.4",
        "symfony/messenger": "^6.4|^7.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.0|^12.0",
        "symplify/easy-coding-standard": "^13.0"
    },
    "autoload": {
        "psr-4": {
            "Freyr\\MessageBroker\\Contracts\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Freyr\\MessageBroker\\Contracts\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpstan": "phpstan analyse --memory-limit=-1",
        "ecs": "ecs check",
        "ecs:fix": "ecs check --fix",
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
